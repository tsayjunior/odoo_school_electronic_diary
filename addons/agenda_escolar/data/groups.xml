<!-- Archivo: agenda_escolar/data/groups.xml -->
<odoo>
    <data noupdate="1">
        <!-- CategorÃ­a del Modulo Agenda Escolar -->
        <record id="school_agenda_category" model="ir.module.category">
            <field name="name">Agenda Escolar</field>
            <field name="sequence">1</field>
        </record>

        <!-- Grupo Administrador -->
        <record id="group_admin_partner" model="res.groups">
            <field name="name">Administrador de Agenda Escolar</field>
            <field name="category_id" ref="agenda_escolar.school_agenda_category"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <!-- Grupo Estudiante -->
        <record id="group_student" model="res.groups">
            <field name="name">Estudiante de Agenda Escolar</field>
            <field name="category_id" ref="agenda_escolar.school_agenda_category"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Grupo Padres o Tutores -->
        <record id="group_tutor" model="res.groups">
            <field name="name">Tutor de Agenda Escolar</field>
            <field name="category_id" ref="agenda_escolar.school_agenda_category"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Grupo Profesores -->
        <record id="group_teacher" model="res.groups">
            <field name="name">Profesor de Agenda Escolar</field>
            <field name="category_id" ref="agenda_escolar.school_agenda_category"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
    </data>
</odoo>
