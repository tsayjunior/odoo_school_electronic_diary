<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="agenda_escolar.course_list">
      <field name="name">agenda_escolar course list</field>
      <field name="model">agenda_escolar.course</field>
      <field name="arch" type="xml">
        <list>
            <field name="name" ></field>
            <field name="description" ></field>
            <field name="parallel" ></field>
            <field name="state" />
            <field name="level_id" ></field>
            <field name="student_ids" ></field>
            <!-- BotÃ³n para abrir la vista de Materias -->
            <button name="action_open_subjects" type="object" string="Materias" class="btn-primary"/>
        </list>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="agenda_escolar.course_window">
      <field name="name">Curso</field>
      <field name="res_model">agenda_escolar.course</field>
      <field name="view_mode">list,form</field>
    </record>

