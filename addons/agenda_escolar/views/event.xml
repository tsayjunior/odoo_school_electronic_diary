<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="agenda_escolar.event_list">
      <field name="name">agenda_escolar event list</field>
      <field name="model">agenda_escolar.event</field>
      <field name="arch" type="xml">
        <list>
            <field name="name"></field>
            <field name="image" widget="image" class="oe_avatar"/>
            <field name="description" ></field>
            <field name="capacity" ></field>
            <field name="place" />
            <field name="date" ></field>
            <field name="start_time" widget="float_time"></field>
            <field name="end_time" widget="float_time"></field>
            <field name="state" ></field>
            <!-- BotÃ³n para abrir la vista de Materias -->
            <button name="action_open_comments" type="object" string="Comentarios" class="btn-primary"/>
        </list>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="agenda_escolar.event_window">
      <field name="name">Eventos</field>
      <field name="res_model">agenda_escolar.event</field>
      <field name="view_mode">list,form</field>
    </record>
  </data>
</odoo>
