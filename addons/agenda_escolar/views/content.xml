<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="agenda_escolar.content_list">
      <field name="name">agenda_escolar content list</field>
      <field name="model">agenda_escolar.content</field>
      <field name="arch" type="xml">
        <list>
            <field name="subject_id"  readonly="1"/>
            <field name="name" ></field>
            <field name="description" ></field>
            <field name="audio_filename" ></field>
            <field name="audio_summary" ></field>
        </list>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="agenda_escolar.content_window">
      <field name="name">Contenido</field>
      <field name="res_model">agenda_escolar.content</field>
      <field name="view_mode">list,form</field>
    </record>
  </data>
</odoo>
