<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="agenda_escolar.student_partner_list">
      <field name="name">agenda_escolar student list</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"></field>
      <!-- <field name="inherit_id" >base.view_partner_form</field> -->
      <field name="mode">primary</field>
      <field name="arch" type="xml">
        <xpath expr="//sheet/notebook/page[@name='internal_notes']" position="after">
          <page name='student' string="Estudiante">
            <group>
              <group>
                <field name="is_student" invisible="1"></field>
                <div class="o_form_label">
                    <strong>Tipo: </strong> Estudiante
                </div>
              </group>
            </group>
          </page>
        </xpath>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="agenda_escolar.action_student_window">
      <field name="name">Estudiante</field>
      <field name="res_model">res.partner</field>
      <field name="view_mode">list,form</field>
      <field name="domain">[('is_student', '=', True)]</field>
      <field name="context">{'default_is_student':True}</field>
    </record>

    <record model="ir.actions.act_window.view" id="agenda_escolar.action_view_student_list">
      <field name="sequence">1</field> <!-- Correcto: nÃºmero dentro de los tags -->
      <field name="view_mode">list</field>
      <field name="view_id" ref="base.view_partner_tree" />
      <field name="act_window_id" ref="agenda_escolar.action_student_window" />
    </record>
    <record model="ir.actions.act_window.view" id="agenda_escolar.action_view_student_form">
      <field name="sequence">2</field> <!-- Correcto: nÃºmero dentro de los tags -->
      <field name="view_mode">form</field>
      <field name="view_id" ref="agenda_escolar.student_partner_list" />
      <field name="act_window_id" ref="agenda_escolar.action_student_window" />
    </record>

  </data>
</odoo>