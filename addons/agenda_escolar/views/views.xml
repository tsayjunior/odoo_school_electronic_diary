    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="agenda_escolar.teacher_partner_list">
      <field name="name">agenda_escolar teacher list</field>
      <field name="model">res.partner</field>
      <field name="arch" type="xml">
        <list>
          <field name="type_for_school" ></field>
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="agenda_escolar.subject_list">
      <field name="name">agenda_escolar subject list</field>
      <field name="model">agenda_escolar.subject</field>
      <field name="arch" type="xml">
        <list>
          <field name="name" ></field>
        </list>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="agenda_escolar.action_teacher_window">
      <field name="name">agenda_escolar window</field>
      <field name="res_model">res.partner</field>
      <field name="view_mode">list,form</field>
    </record>
