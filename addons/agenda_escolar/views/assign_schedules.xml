<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="agenda_escolar.assign_schedules_list">
      <field name="name">agenda_escolar assign_schedules list</field>
      <field name="model">agenda_escolar.assign_schedules</field>
      <field name="arch" type="xml">
        <list>
          <field name="day_id"></field>
          <field name="schedules_id"></field>
        </list>
      </field>
    </record>

    <!-- Vista de formulario para ingresar las asignaciones -->
    <record model="ir.ui.view" id="agenda_escolar.assign_schedules_form">
      <field name="name">agenda_escolar.assign_schedules form</field>
      <field name="model">agenda_escolar.assign_schedules</field>
      <field name="arch" type="xml">
        <form string="AsignaciÃ³n de Horarios">
          <sheet>
            <group>
              <field name="day_id" />
              <field name="schedules_id" />
              <field name="assign_subject_id" invisible="1"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>
    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="agenda_escolar.assign_schedules_window">
      <field name="name">Asignacion Horarios</field>
      <field name="res_model">agenda_escolar.assign_schedules</field>
      <field name="view_mode">list,form</field>
      <field name="view_id" ref="agenda_escolar.assign_schedules_list"/>
      <field name="views" eval="[(5, 0, 0), (ref('agenda_escolar.assign_schedules_form'), 'form'), (ref('agenda_escolar.assign_schedules_list'), 'list')]" />
    </record>


