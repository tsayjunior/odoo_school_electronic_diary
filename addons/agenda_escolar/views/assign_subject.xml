<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="agenda_escolar.assign_subject_list">
      <field name="name">agenda_escolar assign_subject list</field>
      <field name="model">agenda_escolar.assign_subject</field>
      <field name="arch" type="xml">
        <list>
          <field name="course_id"></field>
          <field name="subject_id"></field>
          <field name="teacher_id"></field>
          <!-- Botón para abrir la vista de horarios -->
          <button name="action_open_schedules" type="object" string="Horarios" class="btn-primary"/>
        </list>
      </field>
    </record>

    <!-- Vista de formulario para ingresar las asignaciones -->
    <record model="ir.ui.view" id="agenda_escolar.assign_subject_form">
      <field name="name">agenda_escolar.assign_subject form</field>
      <field name="model">agenda_escolar.assign_subject</field>
      <field name="arch" type="xml">
        <form string="Asignación de Materia">
          <sheet>
            <group>
              <field name="course_id"  readonly="1"/>
              <field name="subject_id" />
              <field name="teacher_id" />
            </group>
          </sheet>
        </form>
      </field>
    </record>
    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="agenda_escolar.assign_subject_window">
      <field name="name">Asignacion Materias</field>
      <field name="res_model">agenda_escolar.assign_subject</field>
      <field name="view_mode">list,form</field>
      <field name="view_id" ref="agenda_escolar.assign_subject_list"/>
      <field name="views" eval="[(5, 0, 0), (ref('agenda_escolar.assign_subject_form'), 'form'), (ref('agenda_escolar.assign_subject_list'), 'list')]" />
    </record>


    <!-- server action to the one above -->
